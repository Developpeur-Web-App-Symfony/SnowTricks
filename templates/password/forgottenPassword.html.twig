{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Mot de passe oublié</h1>

    {{ form_start(passwordForgottenForm) }}
        {{ form_row(passwordForgottenForm.email) }}
        <button type="submit" class="btn">Reinitialiser mon mot de passe</button>
    {{ form_end(passwordForgottenForm) }}
{% endblock %}
