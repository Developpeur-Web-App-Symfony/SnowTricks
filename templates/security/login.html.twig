{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="login-form container-fluid text-center p-3">
    <div class="m-2 p-3">
        <h1>Connexion</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="mb-3">
                <label for="inputUsername">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       autocomplete="username" required autofocus>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
                       required>
            </div>
            <div class="mb-3">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-form-class" type="submit">Connexion</button>
            </div>
        </form>
        <ul class="list-unstyled">
            <li>
                <a href="{{ path('app_register') }}">Inscription</a>
            </li>
            <li>
                <a href="{{ path('app_forgotten_password') }}">Mot de passe oubli√©</a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
